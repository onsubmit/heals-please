{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "target": "es2021",
    "incremental": true,

    "baseUrl": "./",
    "outDir": "./out",
    "paths": {
      "ts": ["ts"],
      "html": ["html"],
      "images": ["images"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": []
  },

  "include": ["ts"],
  "exclude": ["node_modules"]
}
